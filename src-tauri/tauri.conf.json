{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LANChat",
  "version": "0.1.0",
  "identifier": "com.lanchat.app", 
  "build": {
    "frontendDist": "../src"
  },
  "app": {
		"withGlobalTauri": true,
    "windows": [
      {
				"label": "main",
        "title": "LANChat",
        "width": 900,
        "height": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
