{
  "$schema": "../gen/schemas/mobile-schema.json",
  "identifier": "mobile",
  "description": "Mobile platform permissions",
  "platforms": ["android", "iOS"],
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:path:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-read",
    "fs:allow-exists",
    "fs:allow-stat",
    "dialog:default",
    "sql:default",
    "log:default",
    "allow-get-my-name",
    "allow-get-my-id",
    "allow-update-my-name",
    "allow-get-peers",
    "allow-send-message",
    "allow-get-chat-history",
    "allow-send-file",
    "allow-get-settings",
    "allow-update-settings",
    "allow-get-theme-list",
    "allow-get-theme-css",
    "allow-save-current-theme",
    "allow-get-current-theme",
    "allow-accept-file",
    "allow-get-default-download-path",
    "allow-request-storage-permission",
    "allow-save-file-message"
  ],
  "scope": {
    "allow": [
      { "path": "**" }
    ]
  }
}
